<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2ADE3"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Final %30"
        android:inputType="textPersonName"
        android:text=""
        android:textColorHint="#5E5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="423dp" />

    <EditText
        android:id="@+id/Num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Med terms %30"
        android:inputType="textPersonName"
        android:text=""
        android:textColorHint="#5E5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="365dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="369dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="casual"
        android:text="Grade Calculator"
        android:textColor="#FBFBFB"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Quizzes %15"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#E6E1E1"
        android:textColorHint="#5E5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="243dp" />

    <EditText
        android:id="@+id/Num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Homework %25"
        android:inputType="textPersonName"
        android:text=""
        android:textColorHint="#5E5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="303dp" />

    <Button
        android:id="@+id/Calculate"
        android:layout_width="158dp"
        android:layout_height="62dp"
        android:backgroundTint="#5B669F"
        android:fontFamily="sans-serif-medium"
        android:text="Calculate"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="486dp" />

    <TextView
        android:id="@+id/Total"
        android:layout_width="113dp"
        android:layout_height="74dp"
        android:layout_marginEnd="148dp"
        android:fontFamily="casual"
        android:text="Total"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="560dp" />

</androidx.constraintlayout.widget.ConstraintLayout>